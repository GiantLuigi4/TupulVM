{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "buildgcc",
            "command": "g++",
            "args": [
                "-g", "${workspaceFolder}/*.cpp",
                "-o", "${workspaceFolder}/.run/program.exe",
                // "-O3", // I might as well
                "-fpermissive", // windows moment
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
		{
			"type": "shell",
			"label": "buildclang",
			"command": "clang++",
			"args": [
				"-Wall",
				"-std=c++20",
				"*.cpp",
				"-o", "${workspaceFolder}/.run/program.exe",
				"-nopie",
				"-noprofilelib",
				"-fsanitize-minimal-runtime",
				"-Ofast",
				"-flto=full"
				// "-emit-llvm"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": ["$gcc"],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
    ]
}