{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "buildgcc",
            "command": "g++",
            "args": [
                "-g", "${workspaceFolder}/*.cpp",
                "-o", "${workspaceFolder}/.run/program.exe",
                "-fpermissive", // windows moment
				
				"-flto",
                // "-O3",

				"-static-libstdc++",

				"-floop-nest-optimize",
				"-floop-strip-mine",
				// "-flto-compression-level=19",
				"-flto-compression-level=9",
				"-funroll-loops",
				"-Wpointer-arith",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
		{
			"type": "shell",
			"label": "buildclang",
			"command": "clang++",
			"args": [
				"-Wall",
				"-std=c++20",
				"*.cpp",
				"-o", "${workspaceFolder}/.run/program.exe",

				"-flto=full",
				// "-O3",

				"-nopie",
				"-noprofilelib",
				"-fsanitize-minimal-runtime",
				"-funroll-loops",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": ["$gcc"],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
    ]
}